<?xml version="1.0" encoding="UTF-8"?> 
<plugin>
   <groupId>org.apache.maven.plugins</groupId>
   <artifactId>maven-dependency-plugin</artifactId>
   <version>3.6.0</version>
   <executions>
      <execution>
         <id>copy-dependencies</id>
         <phase>package</phase>
         <goals>
            <goal>copy-dependencies</goal>
            </goals>
         <configuration>
            <outputDirectory>./target/-lib/</outputDirectory> <!-- add project name before -lib as convension -->
            </configuration>
         </execution>
      </executions>
   </plugin>

